<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title>Tienda Pingüina</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto; background:#f8fafc; margin:2rem; }
    .card { border:1px solid #e2e8f0; border-radius:10px; padding:1rem; background:white; margin-bottom:1rem; max-width:900px; }
    .row { display:flex; gap:1rem; }
    input, button, select { padding:.55rem .7rem; border:1px solid #e5e7eb; border-radius:.5rem; }
    button { background:#111827; color:#fff; }
    img { max-width:120px; border-radius:6px; border:1px solid #e5e7eb; }
    .buyer { border:1px solid #e2e8f0; background:white; padding:1rem; border-radius:10px; margin-bottom:1rem; }
  </style>
</head>
<body>
  <h1>Menú de productos</h1>

  <form method="POST" action="/checkout">
    <!-- Datos del comprador -->
    <div class="buyer">
      <h2>Datos del comprador</h2>
      <div class="row">
        <div>
          <label>Tu nombre:</label><br>
          <input type="text" name="buyer_name" value="{{.defaultName}}" required>
        </div>
        <div>
          <label>Dirección:</label><br>
          <input type="text" name="address" value="{{.defaultAddress}}" required>
        </div>
        <div>
          <label>Email:</label><br>
          <input type="email" name="email" value="{{.defaultEmail}}" required>
        </div>
      </div>
    </div>

    {{range .products}}
      <div class="card">
        <div class="row">
          <div>
            {{if .ImagePath}}
              <img 
                src="{{ printf "%s%s" $.uploadsBase .ImagePath }}"
                alt="Imagen {{.Name}}"
                style="width:150px; border-radius:8px; object-fit:cover;">
            {{else}}
              <img src="data:image/svg+xml;utf8,
                <svg xmlns='http://www.w3.org/2000/svg' width='120' height='120'>
                  <rect width='100%' height='100%' fill='%23f3f4f6'/>
                  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' fill='%239ca3af' font-size='12'>
                    Sin imagen
                  </text>
                </svg>">
            {{end}}
          </div>
          <div style="flex:1">
            <h2>{{.Name}} — ${{.Price}}</h2>
            <p>{{.Description}}</p>

            <label>Cantidad</label><br>
            <!-- OJO: acá usamos .ID.Hex porque ahora es un struct con ObjectID -->
            <input type="number" name="qty_{{.ID.Hex}}" min="0" value="0" style="width:6rem">
          </div>
        </div>
      </div>
    {{end}}

    <div class="card">
      <button type="submit">Hacer pedido</button>
    </div>
  </form>
</body>
</html>
