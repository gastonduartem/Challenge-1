doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Panel Admin - #{title}

    // Estilos globales (tu CSS principal)
    link(rel="stylesheet", href="/public/main.css")

    // ðŸ‘‡ Permite que cada vista agregue sus propios <meta> u otros tags (ej: auto-refresh)
    block head

    style.
      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto;
        background:#f8fafc;
        color:#111827;
        margin:0;
      }
      header {
        background:#0f172a;
        color:white;
        padding:1rem 2rem;
        display:flex;
        align-items:center;
        justify-content:space-between;
      }
      header a {
        color:white;
        text-decoration:none;
        margin-left:1rem;
      }
      main {
        padding:2rem;
      }
      table {
        border-collapse: collapse;
        width:100%;
        background:white;
        box-shadow:0 2px 6px rgba(0,0,0,.05);
      }
      th, td {
        padding:.75rem;
        border:1px solid #e5e7eb;
        text-align:left;
      }
      th {
        background:#f1f5f9;
        font-weight:600;
      }
      tr:nth-child(even) { background:#f9fafb; }
      button {
        padding:.5rem .8rem;
        border:none;
        border-radius:6px;
        background:#0f172a;
        color:white;
        cursor:pointer;
      }
      button:hover { background:#1e293b; }

  body
    header
      h1(style="margin:0") Panel Admin 
      nav
        // âœ… Enlaces con token dinÃ¡mico
        a(href=`/dashboard?token=${token}`) Inicio
        a(href=`/products?token=${token}`) Productos
        a(href=`/orders?token=${token}`) Pedidos
        a(href="/login") Salir

    main
      block content
